            Foreground="White" />
        <Label
            x:Name="LB_PhoneCompany"
            Margin="1050,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Black"
            Content="+7(960)-083-77-75"
            FontSize="36"
            Foreground="#FF1DF2DC"
            RenderTransformOrigin="0.499,0.58" />
        <Label x:Name="LB_JOBTime" Content="Работаем с 9:00 до 21:00" HorizontalAlignment="Left" Margin="1075,105,0,0" VerticalAlignment="Top" Background="Black" Foreground="White" FontSize="24"/>
